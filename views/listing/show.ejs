<%- layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2 mt-3">

   
    <div class="card mb-3 col-6 offset-2 show-card">
           
    <h3><%= list.title %></h3>
        <img src="<%= list.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
         
          
            <%= list.description %> <br>
             &#8377;<%= list.price %> <br>
             <%=list.location %> <br>
            <%= list.country %> <br></p>
          <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
        </div>
      </div>
      
   <div class="btns">
    <a href="/listings/<%= list.id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn"> Edit </a>
    <form action="/listings/<%= list.id %>?_method=DELETE" method="post">
        <button type="submit" class="btn btn-dark offset-4">Delete</button>
    </form>
   </div>
   <div class="col-8 offset-2 mt-3 mb-3">
    <hr>
    <h3>Leave a comment</h3>
    <form action="/listings/<%= list.id %>/reviews" method="post">
      <div class="mt-3 mb-3">
        <label for="rating" class="form-label">Range</label>
        <input type="range" class="form-range" min="0" max="5" name="review[rating]"  id="rating">
      </div>
      <div class="mt-3 mb-3">
        <label for="comment" class="form-label" > comment</label>
        <textarea name="review[comment]" id="comment" class="form-control" col="30" row="6"></textarea>
      </div>
      <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-outline-dark">submit</button>
      </div>
    </form>
   </div>

</div>
</div>
</body>